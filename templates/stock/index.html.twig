{% extends 'base.html.twig' %}

{% block title %}Stocks{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('stock_index') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('stock_index') }}
{% endblock %}

{% block body %}
    <div class="alert alert-light">
        <h1 class="display-4">Gestion des stocks</h1>
    </div>

    <a class="btn btn-success btn-lg btn-block {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}"
       href="{{ path('articles_new') }}">
        <i class="fas fa-plus-circle"></i> Ajouter un article</a>

    <div class="alert alert-secondary h4 mt-3">
        <i class="fas fa-beer"></i> Pressions
    </div>
    <div class="table-responsive">
        <table id="table-drafts" class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prix à l'achat (pinte)</th>
                <th>Prix à la vente</th>
                <th>Fûts restants</th>
                <th class="table-actions"></th>
            </tr>
            </thead>

            <tbody>
            {% for beer in drafts %}
                <tr>
                    <th scope="row">{{ beer.id }}</th>
                    <td>{{ beer.name }}</td>
                    <td id="afficheStock-cout">{{ beer.cost }} ({{ (beer.cost) / beer.volume /2 }})</td>
                    <td id="afficheStock-prix">{{ beer.sellingPrice }}</td>
                    <td id="afficheStock-quantiteRestante">{{ beer.quantity }}</td>
                    <td class="table-actions">
                        <div class="d-flex">
                            <div class="input-group justify-content-around mx-auto">
                                <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? '' : "disabled" }}"
                                   href="{{ path('articles_edit', { 'id': beer.id }) }}">
                                    <i class="fas fa-edit"></i> Modif.</a>
                                <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('articles_delete', {'id': beer.id}) }}"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ beer.name }} ?')">
                                    <i class="fas fa-times"></i> Suppr.</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary h4 mt-3">
        <img src="{{ asset('build/images/si-glyph-fridge.svg') }}"
             style="height: 1.8rem;vertical-align: bottom;margin-left: -5px;"/>Bouteilles
    </div>
    <div class="table-responsive">
        <table id="table-bottles" class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prix à l'achat</th>
                <th>Prix de vente</th>
                <th>Bouteilles restantes</th>
                <th class="table-actions"></th>
            </tr>
            </thead>

            <tbody>
            {% for bottle in bottles %}
                <tr>
                    <th scope="row">{{ bottle.id }}</th>
                    <td>{{ bottle.name }}</td>
                    <td id="afficheStock-cout">{{ bottle.cost }}</td>
                    <td id="afficheStock-prix">{{ bottle.sellingPrice }}</td>
                    <td id="afficheStock-quantiteRestante">{{ bottle.quantity }}</td>
                    <td class="table-actions">
                        <div class="d-flex">
                            <div class="input-group justify-content-around mx-auto">
                                <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('articles_edit', { 'id': bottle.id }) }}">
                                    <i class="fas fa-edit"></i> Modif.</a>
                                <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('articles_delete', {'id': bottle.id}) }}"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ bottle.name }} ?')">
                                    <i class="fas fa-times"></i> Suppr.</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary h4 mt-3">
        <i class="fas fa-cookie-bite"></i> Nourriture et autres
    </div>
    <div class="table-responsive">
        <table id="table-articles" class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prix à l'achat</th>
                <th>Prix de vente</th>
                <th>Articles restants</th>
                <th class="table-actions"></th>
            </tr>
            </thead>

            <tbody>
            {% for item in article %}
                <tr>
                    <th scope="row">{{ item.id }}</th>
                    <td>{{ item.name }}</td>
                    <td id="afficheStock-cout">{{ item.cost }}</td>
                    <td id="afficheStock-prix">{{ item.sellingPrice }}</td>
                    <td id="afficheStock-quantiteRestante">{{ item.quantity }}</td>
                    <td class="table-actions">
                        <div class="d-flex">
                            <div class="input-group justify-content-around mx-auto">
                                <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('articles_edit', { 'id': item.id }) }}">
                                    <i class="fas fa-edit"></i> Modif.</a>
                                <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('articles_delete', {'id': item.id}) }}"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ item.name }} ?')">
                                    <i class="fas fa-times"></i> Suppr.</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
