{% extends 'base.html.twig' %}

{% block title %}Caisse{% endblock %}

{% block stylesheet %}
    {{ parent() }}

    {{ encore_entry_link_tags('purchase') }}
    <link rel="stylesheet" type="text/css"
          href="https://cdn.jsdelivr.net/npm/instantsearch.js@2.8.0/dist/instantsearch.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('purchase') }}
    <!-- Include AlgoliaSearch JS Client and autocomplete.js library -->
    <script src="https://cdn.jsdelivr.net/algoliasearch/3/algoliasearch.min.js"></script>
    <script src="https://cdn.jsdelivr.net/autocomplete.js/0/autocomplete.min.js"></script>

    <!-- Initialize autocomplete menu -->
    {% autoescape %}
        <script>
            const client = algoliasearch('{{ algoliaAppId }}', '{{ algoliaApiSearchKey }}');
            const index = client.initIndex('{{ algoliaIndex }}');
            //initialize autocomplete on search input (ID selector must match)
            autocomplete('#paying-account', {hint: false}, {
                source: autocomplete.sources.hits(index, {hitsPerPage: 5}),
                //value to be displayed in input control after user's suggestion selection
                displayKey: 'pseudo',
                //hash of templates used when rendering dataset
                templates: {
                    //'suggestion' templating function used to render a single suggestion
                    suggestion: function (suggestion) {
                        return suggestion._highlightResult.pseudo.value + ' <small>(' +
                            suggestion._highlightResult.firstName.value + ' <span class="text-uppercase">' +
                            suggestion._highlightResult.lastName.value + '</span>)</small> : <strong>' +
                            suggestion.balance + '€</strong>';
                    }
                }
            });
        </script>
    {% endautoescape %}
{% endblock %}

{% block body %}
    <form action="{{ path('purchase_submit') }}" method="post">
        <button type="button" class="alert alert-secondary h4" data-toggle="collapse" data-target="#collapseDrafts"
                aria-expanded="true" aria-controls="collapseDrafts">
            <i class="fas fa-beer"></i> Pressions
        </button>

        <div class="collapse show" id="collapseDrafts">
            {% for article in selected_drafts %}
                {% if ((loop.index-1)%3==0 and loop.revindex>3) %}
                    <div class="card-columns mb-1">
                {% elseif ((loop.index-1)%3==0 and loop.revindex<=3) %}
                    <div class="card-columns mb-2">
                {% endif %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title center">{{ article.name }} - {{ article.volume|number_format(0) }}L
                            ({{ article.quantity }})</h5>
                        <input name="drafts[{{ loop.index }}][id]" value="{{ article.id }}" hidden="hidden">
                        <div class="input-group input-prix">
                            <input value="{{ mode == "stockmarket" ? article.data.stockValue : article.sellingPrice }}"
                                   type="text" class="form-control" id="prix" disabled>
                            <div class="input-group-append">
                            <span class="input-group-text" id="inputGroupAppend">
                                <i class="fa fa-euro-sign"></i>
                            </span>
                            </div>
                        </div>

                        <div class="input-group add-delete-article">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Qté</span>
                            </div>
                            <input type="number" min="0" step="1" max="99" class="qte form-control" autocomplete="off"
                                   name="drafts[{{ loop.index }}][quantite]" value="0">
                            <div class="input-group-append">
                                <input type="text" class="qteStock" value="99" hidden>
                                <span class="btn btn-outline-danger btn-value" id="moins"><i
                                            class="fas fa-minus"></i></span>
                                <span class="btn btn-outline-success btn-value" id="plus"><i
                                            class="fas fa-plus"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                {% if loop.index % 3 == 0 %}
                    </div>
                {% elseif loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <button type="button" class="alert alert-secondary h4" data-toggle="collapse" data-target="#collapseBottles"
                aria-expanded="true" aria-controls="collapseBottles">
            {# <img src="{{ asset('build/images/si-glyph-fridge.svg') }}" style="height: 1.8rem;vertical-align: bottom;margin-left: -5px;"/>Bouteilles #}
            <i class="fas fa-wine-bottle"></i> Bouteilles
        </button>

        <div class="collapse show" id="collapseBottles">
            {% for article in selected_bottles %}
                {% if ((loop.index-1)%3==0 and loop.revindex>3) %}
                    <div class="card-columns mb-1">
                {% elseif ((loop.index-1)%3==0 and loop.revindex<=3) %}
                    <div class="card-columns mb-2">
                {% endif %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title center">{{ article.name }} - {{ article.volume*100|number_format(0) }}cL
                            ({{ article.quantity }})</h5>
                        <input name="bottles[{{ loop.index }}][id]" value="{{ article.id }}" hidden="hidden">
                        <div class="input-group input-prix">
                            <input value="{{ mode == "stockmarket" ? article.data.stockValue : article.sellingPrice }}"
                                   type="text" class="form-control" id="prix" disabled>
                            <div class="input-group-append">
                            <span class="input-group-text" id="inputGroupAppend">
                                <i class="fa fa-euro-sign"></i>
                            </span>
                            </div>
                        </div>

                        <div class="input-group add-delete-article">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Qté</span>
                            </div>
                            <input type="number" min="0" step="1" class="qte form-control" autocomplete="off"
                                   name="bottles[{{ loop.index }}][quantite]" value="0">
                            <div class="input-group-append">
                                <input type="text" class="qteStock" value="{{ article.quantity }}" hidden>
                                <span class="btn btn-outline-danger btn-value" id="moins"><i
                                            class="fas fa-minus"></i></span>
                                <span class="btn btn-outline-success btn-value" id="plus"><i
                                            class="fas fa-plus"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                {% if loop.index % 3 == 0 %}
                    </div>
                {% elseif loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <button type="button" class="alert alert-secondary h4" data-toggle="collapse" data-target="#collapseArticles"
                aria-expanded="true" aria-controls="collapseArticles">
            <i class="fas fa-cookie-bite"></i> Nourriture et autres
        </button>

        <div class="collapse show" id="collapseArticles">
            {% for article in selected_articles %}
                {% if ((loop.index-1)%3==0 and loop.revindex>3) %}
                    <div class="card-columns mb-1">
                {% elseif ((loop.index-1)%3==0 and loop.revindex<=3) %}
                    <div class="card-columns mb-2">
                {% endif %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title center">{{ article.name }} ({{ article.quantity }})</h5>
                        <input name="articles[{{ loop.index }}][id]" value="{{ article.id }}" hidden="hidden">
                        <div class="input-group input-prix">
                            <input value="{{ article.sellingPrice }}" type="text" class="form-control" id="prix"
                                   disabled>
                            <div class="input-group-append">
                            <span class="input-group-text" id="inputGroupAppend">
                                <i class="fa fa-euro-sign"></i>
                            </span>
                            </div>
                        </div>

                        <div class="input-group add-delete-article">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Qté</span>
                            </div>
                            <input type="number" min="0" step="1" class="qte form-control" autocomplete="off"
                                   name="articles[{{ loop.index }}][quantite]" value="0">
                            <div class="input-group-append">
                                <input type="text" class="qteStock" value="{{ article.quantity }}" hidden>
                                <span class="btn btn-outline-danger btn-value" id="moins"><i
                                            class="fas fa-minus"></i></span>
                                <span class="btn btn-outline-success btn-value" id="plus"><i
                                            class="fas fa-plus"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                {% if loop.index % 3 == 0 %}
                    </div>
                {% elseif loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div id="paymentContainer">
            <button type="button" class="alert alert-success h4 mb-0" data-toggle="collapse"
                    data-target="#collapsePayer" aria-expanded="false" aria-controls="collapsePayer">
                <i class="fas fa-cash-register"></i> Paiement
            </button>

            <div class="collapse" id="collapsePayer">
                <!-- Prix total -->
                <div class="text-center mx-auto mb-2">
                    <div class="display-4"><span id="totalTxt">0</span></div>
                    <input class="form-control" type="text" id="totalForm" name="total" value="0" placeholder="Total"
                           required hidden>
                </div>

                <!-- Moyens de paiements -->
                <div class="input-group w-100 mb-2">
                    <div class="btn-group btn-group-md btn-group-toggle mx-auto" data-toggle="buttons">
                        <label class="btn btn-light" id="methodCB">
                            <input type="radio" id="option1">
                            <i class="fa fa-credit-card"></i> <span class="d-none d-sm-none d-md-inline">CB</span>
                        </label>

                        <label class="btn btn-light" id="methodCash">
                            <input class="choix-paiement" type="radio" id="option1">
                            <i class="fa fa-coins"></i> <span class="d-none d-sm-none d-md-inline">Liquide</span>
                        </label>

                        <label class="btn btn-light" id="methodAccount">
                            <input class="choix-paiement" type="radio" id="option2">
                            <i class="fa fa-id-badge"></i> <span class="d-none d-sm-none d-md-inline">Compte</span>
                        </label>

                        {% if is_granted(expression('"ROLE_ACTIF" in roles')) %}
                            <label class="btn btn-light" id="methodPumpkin">
                                <input class="choix-paiement" type="radio" id="option3">
                                <i class="fa fa-mobile-alt"></i> <span
                                        class="d-none d-sm-none d-md-inline">Pumpkin</span>
                            </label>
                        {% endif %}

                        <label id="withdraw-open-btn" class="btn btn-light">
                            <input class="choix-paiement" type="radio" id="option">
                            <i class="fas fa-hand-holding-usd"></i> <span
                                    class="d-none d-sm-none d-md-inline">Retrait</span>
                        </label>
                    </div>
                </div>

                <!-- Compte sélectionné -->
                <div class="d-flex justify-content-center">
                    <div class="collapse mb-2" id="collapseSelectedAccount">
                        <div class="input-group">
                            <input id="selectedAccount" class="form-control" type="text" name="accountPseudo" value=""
                                   autocomplete="off" readonly>
                            <div class="input-group-append">
                                <button class="btn btn-dark" type="button"
                                        onclick="openAndFocus('#modalAccount', '#paying-account')">Modifier
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Variables du formulaire -->
                <input id="methode-paiement" name="methode" value="" required hidden>
                <input name="withdrawReason" id="withdrawReason" value="0" required hidden>
                <input type="hidden" name="userId" value="{{ app.user.id }}" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" required>

                <!-- Boutons de validation -->
                {% if is_granted(expression('"ROLE_BUREAU" in roles')) %}
                    <div class="btn-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark btn-md"><i class="fas fa-check"></i>
                            <span class="d-none d-sm-none d-md-inline">Valider la commande</span>
                        </button>
                        <span class="btn btn-light btn-md ml-lg-1"
                              onclick="window.location.href='{{ path('purchase_open_drawer') }}'">
                            <i class="fas fa-lock-open"></i>
                            <span class="d-none d-sm-none d-md-inline">Ouvrir la caisse</span>
                        </span>
                    </div>
                {% else %}
                    <button type="submit" class="btn btn-dark btn-md btn-block">
                        <span class="d-none d-sm-none d-md-inline">Payer</span>
                    </button>
                {% endif %}
            </div>
        </div>
    </form>

    <div class="modal fade" tabindex="-1" role="dialog" id="modalWithdraw">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalWithdrawLabel">Remboursement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle rounded-left" type="button"
                                            id="reasonDropdown" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                        Retour d'écocup(s)
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="reasonDropdown">
                                        {% if is_granted(expression('"ROLE_BUREAU" in roles')) %}
                                            <a class="dropdown-item" id="withdraw2" href="javascript:void(0);">Autre</a>
                                        {% endif %}
                                        <a class="dropdown-item" id="withdraw1" href="javascript:void(0);">Retour
                                            d'écocup(s)</a>
                                    </div>
                                </div>
                            </div>
                            <input name="amount" id="amount" lang="en" min="0" step="1" type="number"
                                   class="form-control form-control amount-withdraw" aria-describedby="amount-prefix"
                                   autocomplete="off" value="1">
                        </div>
                    </div>
                    <div class="btn-group btn-group-md btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-success active"
                               onclick="$('#selectedRefundMethod').attr('value', 'cash')">
                            <input class="choix-paiement" type="radio" id="option1">
                            <i class="fa fa-money-bill-alt"></i> Liquide
                        </label>
                        {% if is_granted(expression('"ROLE_BUREAU" in roles')) %}
                            <label class="btn btn-success"
                                   onclick="$('#selectedRefundMethod').attr('value', 'account')">
                                <input class="choix-paiement" type="radio" id="option2">
                                <i class="fa fa-id-badge"></i> Compte
                            </label>
                        {% endif %}
                    </div>
                    <input id="selectedRefundMethod" value="" hidden>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button id="withdraw-save-btn" type="button" class="btn btn-success validate-withdraw">Valider
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="modalAccount">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAccountLabel">Compte à débiter</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <!-- <label class="form-control-label" for="search-input">Compte à débiter</label> -->
                        <input type="search" id="paying-account" class="form-control form-control-md"
                               placeholder="Rechercher un compte..." autocomplete="off">
                    </div>
                </div>
                <div class="modal-footer">
                    <a id="algolia-brand" href="https://algolia.com" target="_blank"><img
                                src="{{ asset('build/images/search-by-algolia-light-background-8762ce8b.svg') }}"></a>
                    <div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        <button id="account-save-btn" type="button" class="btn btn-success validate-account">Valider
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
