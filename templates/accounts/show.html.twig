{% extends 'base.html.twig' %}

{% block title %}Compte - {{ account.pseudo }}{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('accounts_show') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('accounts_show') }}
{% endblock %}

{% block body %}
    <div class="alert alert-light container-fluid mx-0 w-100">
        <div class="row px-2">
            <h1 class="display-4">{{ account.pseudo }}</h1>
            <div class="spacer"></div>
            <div class="btn-group heading-actions" role="group">
                <a class="btn btn-outline-success my-2" href="{{ path('accounts_edit', {'id': account.id}) }}">
                    <i class="fas fa-edit"></i>&nbsp;Modifier
                </a>
                <a class="btn btn-outline-warning my-2" href="{{ path('accounts_refill', {'id': account.id}) }}">
                    <i class="fas fa-gas-pump"></i>&nbsp;Recharger
                </a>
            </div>
        </div>
    </div>


    <table class="table">
        <tbody>
        <tr>
            <th>Prénom</th>
            <td>{{ account.firstName }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ account.lastName }}</td>
        </tr>
        <tr>
            <th>Solde</th>
            <td>{{ account.balance }}€</td>
        </tr>
        <tr>
            <th>Année</th>
            <td>{{ account.year }}A</td>
        </tr>
        <tr>
            <th>Nom de staff</th>
            <td>{{ account.staffName ? account.staffName : '-' }}</td>
        </tr>
        <tr>
            <th>Intronisé</th>
            <td>{{ account.isInducted ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
            <th>Nb de transactions</th>
            <td>{{ account.transactions|length }}</td>
        </tr>
        </tbody>
    </table>

    {% if account.transactions|length > 0 %}
        <div class="table-responsive pb-3 mt-3">
            <table id="table" class="table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Encaissé par</th>
                    <th>Montant</th>
                    <th>Payé par</th>
                    <th>Horodatage</th>
                    <th>Date du Z</th>
                    <th class="table-action">Détails</th>
                </tr>
                </thead>

                <tbody>
                {% for transaction in account.transactions %}
                    <tr>
                        <th>{{ transaction.id }}</th>
                        <td>{{ transaction.staff is not null ? transaction.staff.username : "Utilisateur supprimé" }}</td>
                        <td>{{ transaction.type == 2 ? - transaction.amount : transaction.amount }}€</td>
                        <td>
                            {% if transaction.method == "account" %}
                                Compte
                            {% elseif transaction.method == "cash" %}
                                Liquide
                            {% elseif transaction.method == "pumpkin" %}
                                Pumpkin
                            {% elseif transaction.method == "card" %}
                                Carte Bleue
                            {% else %}
                                Non reconnue
                            {% endif %}
                        </td>
                        <td>{{ transaction.timestamp|date('d/m/Y H:i:s') }}</td>
                        <td>{{ transaction.zreport ? transaction.zreport.timestamp|date('d/m/Y H:i:s') : 'En cours' }}</td>
                        <td class="table-action">
                            <div class="d-flex justify-content-center">
                                {% if transaction.type == 1 %}
                                    <div class="btn-group dropleft">
                                        <button type="button" class="btn btn-secondary dropdown-toggle no-arrow"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-info-circle" aria-hidden="true"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <h6 class="dropdown-header">Articles achetés</h6>
                                            {% if transaction.details is not empty %}
                                                {% for detail in transaction.details %}
                                                    <span class="dropdown-item">{{ detail.article.name }} : {{ detail.quantity }}</span>
                                                {% endfor %}
                                            {% else %}
                                                <span class="dropdown-item">Articles supprimés</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% elseif transaction.type == 2 %}
                                    {% if transaction.details is not empty %}
                                        <div class="btn-group dropleft">
                                            <button type="button" class="btn btn-secondary dropdown-toggle no-arrow"
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-minus" aria-hidden="true"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <h6 class="dropdown-header">Articles retournés</h6>
                                                {% for detail in transaction.details %}
                                                    <span class="dropdown-item">{{ detail.article.name }} : {{ detail.quantity }}</span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-secondary">
                                                <i class="fas fa-minus" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    {% endif %}
                                {% elseif transaction.type == 3 %}
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary">
                                            <i class="fas fa-gas-pump" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                {% else %}
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-danger">
                                            <i class="fa fa-times" aria-hidden="true"></i>
                                        </button>
                                    </div>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        Pas de transaction à afficher
    {% endif %}
{% endblock %}
