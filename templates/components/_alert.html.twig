{% if type == 'info' %}
    {% set class = 'success' %}
    {% set icon = 'save' %}
    {% set prefix = 'Information&nbsp;:' %}
{% elseif type == 'error' %}
    {% set class = 'danger' %}
    {% set icon = 'times-circle' %}
    {% set prefix = 'Erreur&nbsp;:' %}
{% else %}
    {% set class = 'info' %}
    {% set icon = 'question-circle' %}
    {% set prefix = 'Inconnu&nbsp;:' %}
{% endif %}
<div class="alert alert-{{ class }} alert-dismissible fade show" role="alert">
    <i class="fa fa-{{ icon }}"></i> {{ prefix|raw }} {{ message }}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>