{% set current_path = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
{% if activeModes is defined %}
    {% if "stockmarket" in activeModes %}
        {% set logo = "logo_sm_mode.png" %}
        {% set mode = "stockmarket" %}
    {% else %}
        {% set logo = "logo.png" %}
        {% set mode = "default" %}
    {% endif %}
{% else %}
    {% set mode = "default" %}
{% endif %}
<!DOCTYPE html>
<html lang="fr_FR">

<head>
    <meta charset="utf-8"/>
    <link rel='shortcut icon' type='image/x-icon' href="{{ asset('build/images/logo.ico') }}"/>
    <title>{% block title %}Clochette{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {% block stylesheet %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>

<body class="{{ mode }}">
<div id="loading">
    <img id="loading-image" src="{{ asset('build/images/ripple.svg') }}" alt="Chargement..."/>
</div>

{% block header %}
    {{ include('layout/_header.html.twig') }}
{% endblock %}

<div class="container-fluid">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {{ include('components/_alert.html.twig', {type: label, message: message}) }}
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<div class="spacer"></div>
{% block footer %}
    {{ include('layout/_footer.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>

</html>
