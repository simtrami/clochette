{% extends 'base.html.twig' %}

{% block title %}Historique des tenues{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('management_history') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('management_history') }}
{% endblock %}

{% block body %}
    <div class="alert alert-light">
        <h1 class="display-4">Historique des tenues</h1>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Validée par</th>
                <th>Ventes</th>
                <th>Rechargements</th>
                <th>Remboursements</th>
                <th>Total <small>(hors remb.)</small></th>
                <th>Caisse</th>
                <th>Coffre</th>
                <th>Nb transactions</th>
                <th>Date de clôture</th>
                <th class="table-actions"></th>
            </tr>
            </thead>

            <tbody>
            {% for zreport in zreports %}
                <tr>
                    <th scope="row">{{ zreport.id }}</th>
                    <td>{{ zreport.staff.username }}</td>
                    <td>{{ zreport.totalCommand }}€</td>
                    <td>{{ zreport.totalRefill }}€</td>
                    <td>{{ zreport.totalRefund }}€</td>
                    <td>{{ zreport.total }}€</td>
                    <td>{{ zreport.treasury.cashRegister }}€</td>
                    <td>{{ zreport.treasury.safe }}€</td>
                    <td>{{ zreport.transactions|length }}</td>
                    <td>{{ zreport.timestamp|date('H:i:s d/m/Y') }}</td>
                    <td class="table-actions">
                        <div class="d-flex">
                            <div class="input-group justify-content-around mx-auto">
                                <a class="btn btn-secondary mt-1 {{ is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}"
                                   href="{{ path('management_runs_treasury_edit', { 'id': zreport.treasury.id }) }}">
                                    <i class="fas fa-edit"></i> Trésorerie</a>
                                <a class="btn btn-success mt-1"
                                   href="{{ path('management_runs_show', {'id': zreport.id}) }}">
                                    <i class="fas fa-plus"></i> Détails</a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}