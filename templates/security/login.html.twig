{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connexion à Clochette</h1>
    <div class="form-check col-12 col-md-8 col-lg-6">
        <div class="form-group row">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="form-group row">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
        #}

        <div class="form-group row">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="_remember_me" id="remember_me"/>
                <label class="custom-control-label" for="remember_me">Se souvenir de moi</label>
            </div>
        </div>

        <div class="form-group row">
            <button class="btn btn-success" type="submit">
                Connexion
            </button>
            <a class="btn-link ml-2" style="align-self: center" href="{{ path('app_forgot_password_request') }}">Mot de
                passe oublié :(</a>
        </div>
    </div>
</form>
{% endblock %}
