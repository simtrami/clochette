{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid">

      
        <div class="alert alert-light">
            <h1 class="display-4">Gestion des utilisateurs</h1>
        </div>

        <a class="btn btn-success btn-lg btn-block" href="{{ path('user_registration') }}"><i class="fas fa-plus-circle"></i> Ajouter un utilisateur</a>

        <div class="table-responsive">
            <table id="table-drafts" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col-lg-1">#</th>
                        <th scope="col-lg-3">Nom d'Utilisateur</th>
                        <th scope="col-lg-2">Email</th>
                        <th scope="col-lg-2">Mot de Passe</th>
                        <th scope="col-lg-2">RÃ´le</th>
                        <th scope="col-lg-2">Action</th>
                    </tr>
                </thead>

                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                                <td>{{ user.username }}</th>
                                <td>{{ user.email }}</td>
                                <td>{{user.plainPassword}}</td>
                                <td>
                                    {% for roles in user.roles %}
                                        {{roles}}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td><a class="btn btn-secondary" href="{{ path( 'users_modify', {'id' :user.id} ) }}">
                                <i class="fa fa-edit"></i>
                                 Modifier
                                 </a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


    </div>
      


{% endblock %}