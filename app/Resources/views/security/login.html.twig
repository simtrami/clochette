{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container-fluid">
        <h4>Connexion Ã  Clochette</h4>
        <form action="{{ path('login') }}" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="username">Pseudo :</label>
                    <input type="text" class="form-control" placeholder="toto" id="username" name="_username" value="{{ last_username }}" required/>
                </div>
                <div class="form-group col-md-6">
                    <label for="password">Mot de passe :</label>
                    <input type="password" class="form-control" placeholder="m02p@ss" id="password" name="_password" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    {# https://symfony.com/doc/3.4/security/remember_me.html #}
                    <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" checked>
                    <label class="custom-control-label" for="remember_me">Se souvenir de moi</label>
                </div>
            </div>

            {# If you want to control the URL the user is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" /> https://symfony.com/doc/3.4/security/form_login.html #}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary" type="submit">Se connecter</button>
        </form>
    </div>


    </form>
    </div>
{% endblock %}