{% extends 'base.html.twig' %}

{% block title %}Modifier la clôture{% endblock %}

{% block stylesheet %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-double"></i> Information : {{message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="alert alert-light">
        <h1 class="display-4">Modifier clôture du bar</h1>
    </div>

    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-warning btn-lg btn-block">Modifier</button>
    {{ form_end(form) }}
{% endblock %}