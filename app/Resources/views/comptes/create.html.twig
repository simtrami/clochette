{% extends 'base.html.twig' %}

{% block title %}{{ mode == 'new_account' ? 'Créer un compte' : "Modifier " ~ prenom ~ " " ~ nom }}{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="alert alert-light center">
            <h4>{{ mode == 'new_account' ? 'Créer un compte' : "Modifier le compte de " ~ prenom ~ " " ~ nom }}</h4>
        </div>
        
        {{ form_start(form) }}
            {{ form_errors(form) }}
            {% if mode == 'modify_account' %}
                {{ form_row(form.nomStaff) }}
            {% endif %}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.pseudo) }}
            {{ form_label(form.solde) }}
            {{ form_errors(form.solde) }}
            {{ form_widget(form.solde, { 'attr' : {'placeholder' : '0.00', 'value' : '0.00'} }) }}
            {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    {{ mode == 'new_account' ? 'Créer' : 'Modifier' }}</button>
            {{ form_end(form) }}
    </div>

{% endblock %}