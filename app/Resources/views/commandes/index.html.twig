{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block javascripts %}
    {# Sorting rows : https://datatables.net/examples/styling/bootstrap4.html #}
    <script src=" https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#table').DataTable();
        } );
    </script>
{% endblock %}

{% block body %}


    <div class="container-fluid">
        {#
            TODO:
            - Changer l'affichage des méthodes de paiement (icones, traductions, etc.)
            - Afficher l'heure et la date pour que ce soit plus pratique à lire (sans modifier la base)
        #}
        
        <div class="table-responsive pad-t">
            <table id="table" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nom d'utilisateur</th>
                        <th>Pseudo du compte (opt.)</th>
                        <th>Montant</th>
                        <th>Méthode de paiement</th>
                        <th>Date et heure</th>
                    </tr>
                </thead>

                <tbody>
                {% for commande in commandes %}
                    <tr>
                        <th>
                            <div class="btn-group dropright">
                                <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ commande.id }}</button>
                                <div class="dropdown-menu">
                                    <h6 class="dropdown-header">Articles achetés</h6>
                                    {% if commande.details is not empty %}
                                        {% for detail in commande.details %}
                                            <span class="dropdown-item">{{ detail.article.nom }} : {{ detail.quantite }}</span>
                                        {% endfor %}
                                    {% else %}
                                        <span class="dropdown-item">Articles supprimés</span>
                                    {% endif %}
                                </div>
                            </div>
                        </th>
                        <td>{{ commande.user is not null ? commande.user.username : "Utilisateur supprimé" }}</td>
                        <td>{% if commande.compte != NULL %}
                                {{ commande.compte.pseudo }}
                            {% elseif commande.methode != "account" %}
                                N/A
                            {% else %}
                                Compte supprimé
                            {% endif %}
                        </td>
                        <td>{{ commande.montant }}€</td>
                        <td>{{ commande.methode }}</td>
                        <td>{{ commande.timestamp|date('Y-m-d H:i:s') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}