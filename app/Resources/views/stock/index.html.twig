{% block body %}
    {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-save"></i> Information : {{message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="alert alert-light">
        <h1 class="display-4">Gestion des stocks</h1>
    </div>

    <a class="btn btn-success btn-lg btn-block {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}" href="{{ path('ajout_article') }}">
        <i class="fas fa-plus-circle"></i> Ajouter un article</a>

    <div class="alert alert-secondary h4 mt-3">
        <i class="fas fa-beer"></i> Pressions
    </div>
    <div class="table-responsive">
        <table id="table-drafts" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prix à l'achat (pinte)</th>
                    <th>Prix à la vente</th>
                    <th>Fûts restants</th>
                    <th class="table-actions"></th>
                </tr>
            </thead>

            <tbody>
                {% for beer in drafts %}
                    <tr>
                        <th scope="row">{{ beer.id }}</th>
                        <td>{{ beer.nom }}</td>
                        <td id="afficheStock-cout">{{ beer.prixAchat }} ({{ (beer.prixAchat - 30) / beer.volume /2 }})</td>
                        <td id="afficheStock-prix">{{ beer.prixVente }}</td>
                        <td id="afficheStock-quantiteRestante">{{ beer.quantite }}</td>
                        <td class="table-actions">
                            <div class="d-flex">
                                <div class="input-group justify-content-around mx-auto">
                                    <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}" href="{{ path('modif_article', { 'id_article': beer.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}" href="{{ path('suppr_article', {'idarticle': item.id}) }}" href="{{ path('suppr_article', {'idarticle': beer.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ beer.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary h4 mt-3">
        <img src="{{ asset('svg/si-glyph-fridge.svg') }}" style="height: 1.8rem;vertical-align: bottom;margin-left: -5px;"/>Bouteilles
    </div>
    <div class="table-responsive">
        <table id="table-bottles" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prix à l'achat</th>
                    <th>Prix de vente</th>
                    <th>Bouteilles restantes</th>
                    <th class="table-actions"></th>
                </tr>
            </thead>

            <tbody>
                {% for bottle in bottles %}
                    <tr>
                        <th scope="row">{{ bottle.id }}</th>
                        <td>{{ bottle.nom }}</td>
                        <td id="afficheStock-cout">{{ bottle.prixAchat }}</td>
                        <td id="afficheStock-prix">{{ bottle.prixVente }}</td>
                        <td id="afficheStock-quantiteRestante">{{ bottle.quantite }}</td>
                        <td class="table-actions">
                            <div class="d-flex">
                                <div class="input-group justify-content-around mx-auto">
                                    <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}" href="{{ path('modif_article', { 'id_article': bottle.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}" href="{{ path('suppr_article', {'idarticle': item.id}) }}" href="{{ path('suppr_article', {'idarticle': bottle.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ bottle.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary h4 mt-3">
        <i class="fas fa-cookie-bite"></i> Nourriture et autres
    </div>
    <div class="table-responsive">
        <table id="table-articles" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Prix à l'achat</th>
                    <th>Prix de vente</th>
                    <th>Articles restants</th>
                    <th class="table-actions"></th>
                </tr>
            </thead>

            <tbody>
                {% for item in article %}
                    <tr>
                        <th scope="row">{{ item.id }}</th>
                        <td>{{ item.nom }}</td>
                        <td id="afficheStock-cout">{{ item.prixAchat }}</td>
                        <td id="afficheStock-prix">{{ item.prixVente }}</td>
                        <td id="afficheStock-quantiteRestante">{{ item.quantite }}</td>
                        <td class="table-actions">
                            <div class="d-flex">
                                <div class="input-group justify-content-around mx-auto">
                                    <a class="btn btn-success mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true or is_granted(expression('"ROLE_TRESO" in roles'))==true ? "" : "disabled" }}" href="{{ path('modif_article', { 'id_article': item.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger mt-1 {{ is_granted(expression('"ROLE_STOCK" in roles'))==true ? "" : "disabled" }}" href="{{ path('suppr_article', {'idarticle': item.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ item.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
