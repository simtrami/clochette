{% block body %}
    <div class="container-fluid">

      
        <div class="alert alert-light">
            <h1 class="display-4">Gestion des stocks</h1>
        </div>
      
        {% for message in app.session.flashbag.get('info') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-save"></i> Information : {{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
      
        <a class="btn btn-success btn-lg btn-block" href="{{ path('ajout_article') }}">
            <i class="fas fa-plus-circle"></i> Ajouter un article</a>
      
        <div class="alert alert-secondary marg-t">
            <h4><i class="fas fa-beer"></i> Pressions</h4>
        </div>
        <div class="table-responsive">
            <table id="table-drafts" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col-lg-1">#</th>
                        <th scope="col-lg-3">Nom</th>
                        <th scope="col-lg-2">Prix à l'achat (pinte)</th>
                        <th scope="col-lg-2">Prix à la vente</th>
                        <th scope="col-lg-2">Fûts restants</th>
                        <th scope="col-lg-2"></th>
                    </tr>
                </thead>

                <tbody>
                    {% for beer in drafts %}
                        <tr>
                            <th scope="row">{{ beer.id }}</th>
                            <td>{{ beer.nom }}</th>
                                <td id="afficheStock-cout">{{ beer.prixAchat }} ({{ (beer.prixAchat - 30) / beer.volume /2 }})</td>
                                <td id="afficheStock-prix">{{ beer.prixVente }}</td>
                                <td id="afficheStock-quantiteRestante">{{ beer.quantite }}</td>
                                <td class="center">
                                    <a class="btn btn-secondary marg-r" href="{{ path('modif_article', { 'id_article': beer.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': beer.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ beer.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="alert alert-secondary marg-t">
            <h4><img src="{{ asset('svg/si-glyph-fridge.svg') }}" style="height: 1.8rem;vertical-align: bottom;margin-left: -5px;"/>Bouteilles</h4>
        </div>
        <div class="table-responsive">
            <table id="table-bottles" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col-lg-1">#</th>
                        <th scope="col-lg-3">Nom</th>
                        <th scope="col-lg-2">Prix à l'achat</th>
                        <th scope="col-lg-2">Prix de vente</th>
                        <th scope="col-lg-2">Bouteilles restantes</th>
                        <th scope="col-lg-2"></th>
                    </tr>
                </thead>

                <tbody>
                    {% for bottle in bottles %}
                        <tr>
                            <th scope="row">{{ bottle.id }}</th>
                            <td>{{ bottle.nom }}</th>
                                <td id="afficheStock-cout">{{ bottle.prixAchat }}</td>
                                <td id="afficheStock-prix">{{ bottle.prixVente }}</td>
                                <td id="afficheStock-quantiteRestante">{{ bottle.quantite }}</td>
                                <td class="center">
                                    <a class="btn btn-secondary marg-r" href="{{ path('modif_article', { 'id_article': bottle.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': bottle.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ bottle.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="alert alert-secondary marg-t">
            <h4><i class="fas fa-cookie-bite"></i> Nourriture et autres</h4>
        </div>
        <div class="table-responsive">
            <table id="table-articles" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col-lg-1">#</th>
                        <th scope="col-lg-3">Nom</th>
                        <th scope="col-lg-2">Prix à l'achat</th>
                        <th scope="col-lg-2">Prix de vente</th>
                        <th scope="col-lg-2">Articles restants</th>
                        <th scope="col-lg-2"></th>
                    </tr>
                </thead>

                <tbody>
                    {% for item in article %}
                        <tr>
                            <th scope="row">{{ item.id }}</th>
                            <td>{{ item.nom }}</th>
                                <td id="afficheStock-cout">{{ item.prixAchat }}</td>
                                <td id="afficheStock-prix">{{ item.prixVente }}</td>
                                <td id="afficheStock-quantiteRestante">{{ item.quantite }}</td>
                                <td class="center">
                                    <a class="btn btn-secondary marg-r" href="{{ path('modif_article', { 'id_article': item.id }) }}">
                                        <i class="fas fa-edit"></i> Modif.</a>
                                    <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': item.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ item.nom }} ?')">
                                        <i class="fas fa-times"></i> Suppr.</a>
                                </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}