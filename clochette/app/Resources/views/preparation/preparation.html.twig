{% extends 'base.html.twig' %}

{% block title %}Préparation{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/preparation.css') }}">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="alert alert-secondary">
        <h1>Articles disponibles ce soir</h1>
    </div>
    
    {{ form_start(form) }}
        <div class="table-responsive pad-t">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Action</th>
                        <th scope="col">Nom pression</th>
                        <th scope="col">Prix de la pinte ( Prix du demi = prix de la pinte/2 + 0.5)</th>
                        <th scope="col">Fûts restants</th>
                    </tr>
                </thead>
                <tbody>
                    {% for draft in form.drafts %}
                        <tr>
                            <th scope="row">
                                {{ form_row(draft.isForSale) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(draft.nom, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(draft.prixVente, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(draft.quantite, {'attr': {'class': ""}}) }}
                            </th>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="table-responsive pad-t">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Action</th>
                        <th scope="col">Nom bouteille</th>
                        <th scope="col">Prix de vente</th>
                        <th scope="col">Bouteilles restantes</th>
                    </tr>
                </thead>
                <tbody>
                    {% for bottle in form.bottles %}
                        <tr>
                            <th scope="row">
                                {{ form_row(bottle.isForSale) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(bottle.nom, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(bottle.prixVente, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(bottle.quantite, {'attr': {'class': ""}}) }}
                            </th>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="table-responsive pad-t">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Action</th>
                        <th scope="col">Nom article</th>
                        <th scope="col">Prix de vente</th>
                        <th scope="col">Articles restants</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in form.articles %}
                        <tr>
                            <th scope="row">
                                {{ form_row(article.isForSale) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(article.nom, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(article.prixVente, {'attr': {'class': ""}}) }}
                            </th>
                            <th scope="row">
                                {{ form_widget(article.quantite, {'attr': {'class': ""}}) }}
                            </th>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <button class="btn btn-primary btn-lg btn-block" type="submit">
            Mettre à jour</button>
    {{ form_end(form) }}

    <div class="alert alert-secondary">
        <h1>Contenu de la caisse</h1>
    </div>
</div>
{% endblock %}