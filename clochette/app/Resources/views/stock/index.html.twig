{% extends 'base.html.twig' %}

{% block title %}Stocks{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/stock.css') }}">
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
<div class="container-fluid">

    <div class="table-responsive pad-t">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom pression</th>
                    <th scope="col">Prix à l'achat (pinte)</th>
                    <th scope="col">Prix à la vente</th>
                    <th scope="col">Fûts restants</th>
                    {# <th scope="col">Pintes achetées</th> #}
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
                {% for beer in drafts %}
                <tr>
                    <th scope="row">{{ beer.idarticle }}</th>
                    <th scope="row">{{ beer.nom }}</th>
                    <td id="afficheStock-cout">{{ beer.prixAchat }} ({{ (beer.prixAchat - 30) / beer.volume /2 }})</td>
                    <td id="afficheStock-prix">{{ beer.prixVente }}</td>
                    <td id="afficheStock-quantiteRestante">{{ beer.quantite }}</td>
                    {# <td id="afficheStock-quantiteAchat">{{ beer.nbSoldeCurrent }}</td> #}
                    <td>
                        <a class="btn btn-outline-info" href="{{ path("details_article", { 'id_article': beer.idarticle }) }}">MODIFIER</a>
                        <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': beer.idarticle}) }}"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ beer.nom }} ?')">SUPPRIMER</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="table-responsive pad-t">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom bouteille</th>
                    <th scope="col">Prix à l'achat</th>
                    <th scope="col">Prix de vente</th>
                    <th scope="col">Bouteilles restantes</th>
                    {# <th scope="col">Bouteilles achetées</th> #}
                    <th scope="col">Action</th>
                </tr>
            </thead>
            
            <tbody>
                {% for bottle in bottles %}
                <tr>
                    <th scope="row">{{ bottle.idarticle }}</th>
                    <th scope="row">{{ bottle.nom }}</th>
                    <td id="afficheStock-cout">{{ bottle.prixAchat }}</td>
                    <td id="afficheStock-prix">{{ bottle.prixVente }}</td>
                    <td id="afficheStock-quantiteRestante">{{ bottle.quantite }}</td>
                    {# <td id="afficheStock-quantiteAchat">{{ bottle.nbSoldeCurrent }}</td> #}
                    <td>
                        <a class="btn btn-outline-info" href="{{ path("details_article", { 'id_article': bottle.idarticle }) }}">MODIFIER</a>
                        <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': bottle.idarticle}) }}"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ bottle.nom }} ?')">SUPPRIMER</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="table-responsive pad-t">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom article</th>
                    <th scope="col">Prix à l'achat</th>
                    <th scope="col">Prix de vente</th>
                    <th scope="col">Articles restants</th>
                    {# <th scope="col">Articles achetés</th> #}
                    <th scope="col">Action</th>
                </tr>
            </thead>
            
            <tbody>
                {% for item in article %}
                <tr>
                    <th scope="row">{{ item.idarticle }}</th>
                    <th scope="row">{{ item.nom }}</th>
                    <td id="afficheStock-cout">{{ item.prixAchat }}</td>
                    <td id="afficheStock-prix">{{ item.prixVente }}</td>
                    <td id="afficheStock-quantiteRestante">{{ item.quantite }}</td>
                    {# <td id="afficheStock-quantiteAchat">{{ item.nbSoldeCurrent }}</td> #}
                    <td>
                        <a class="btn btn-outline-info" href="{{ path("details_article", { 'id_article': item.idarticle }) }}">MODIFIER</a>
                        <a class="btn btn-danger" href="{{ path('suppr_article', {'idarticle': item.idarticle}) }}"
                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article : {{ item.nom }} ?')">SUPPRIMER</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="fa-pull-right pad-t">
        <a class="btn btn-success" href="{{ path('ajout_article') }}">Ajouter un article</a>
    </div>

</div>
{% endblock %}