<!DOCTYPE html>
<html class="fa-events-icons-ready">
<head>
    <meta charset="utf-8"/>
    <link rel='shortcut icon' type='image/x-icon' href='{{ asset('images/logo.ico') }}' />
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="{{ asset('lib/bootstrap.css') }}">
    {% block stylesheet %}{% endblock %}

    <link rel="stylesheet" href="{{ asset('css/header.css') }}">

    <script src="{{ asset('lib/jquery.js') }}"></script>
    <script src="{{ asset('js/nav.js') }}"></script>

    <script src="https://use.fontawesome.com/7af49feb1a.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" style="width:110px;">
            </a>

            <button {# id="header-toggler" #} class="navbar-toggler" type="button" data-toggle="collapse"
                     data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse {# menu #}" id="navbarAltMarkup">
                <ul class="navbar-nav nav {# .justify-content-center #}">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('homepage') }}"><i class="fa fa-home" aria-hidden="true"></i>
                            Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('purchase') }}"><i class="fa fa-money"></i> Caisse</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('stock') }}"><i class="fa fa-stack-overflow"
                                                                            aria-hidden="true"></i> Stock</a>
                    </li>
                    {# <li class="nav-item">
                        <a class="nav-link" href="#"><i
                                    class="fa fa-calendar"></i> Calendrier</a>
                    </li> #}
                    <li class="nav-item" dropdown>
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i></a>
                        <div class="dropdown-menu">
                            {% if is_granted(expression('"ROLE_INTRO" in roles')) %}
                                <a class="dropdown-item" href="#">{{ app.user.username }} <i class="fa fa-cog"></i></a>
                                <a class="dropdown-item" href="#">Autre action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('logout') }}">Se d√©connecter</a>
                            {% else %}
                                <a class="dropdown-item" href="{{ path('login') }}">Se connecter</a>
                            {% endif %}
                        </div>
                    </li>
                    {# <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}"><i class="fa fa-user" aria-hidden="true"></i></a>
                    </li> #}
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fa fa-plus"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('logout') }}"><i class="fa fa-power-off" aria-hidden="true"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <footer>
        <script src="{{ asset('lib/bootstrap.js') }}"></script>
        <script src="{{ asset('lib/jquery.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </footer>

</body></html>